{
    "name": "gov-proposal-ai-backend",
    "version": "1.0.0",
    "description": "Backend for Gov Proposal AI",
    "main": "src/app.js",
    "scripts": {
        "start": "node src/app.js",
        "dev": "nodemon src/app.js",
        "test": "jest",
        "test:unit": "jest test/unit --verbose",
        "test:integration": "jest test/integration --verbose",
        "test:e2e": "jest test/e2e --verbose --detectOpenHandles",
        "test:regression": "jest test/integration test/e2e --verbose",
        "test:watch": "jest --watch",
        "test:coverage": "jest --coverage --verbose",
        "test:phase1": "jest test/integration/phase1-basic-functionality.test.js --verbose",
        "test:phase2": "jest test/integration/phase2-admin-interface.test.js --verbose",
        "test:phase3": "jest test/integration/phase3-advanced-features.test.js --verbose",
        "test:workflows": "jest test/e2e/user-workflows.test.js --verbose --detectOpenHandles",
        "test:ci": "jest --ci --coverage --watchAll=false",
        "lint": "eslint src/ --ext .js",
        "lint:fix": "eslint src/ --ext .js --fix",
        "migrate": "node scripts/migrate.js",
        "seed": "node scripts/seed.js"
    },
    "dependencies": {
        "axios": "^1.6.0",
        "bcryptjs": "^2.4.3",
        "cookie-parser": "^1.4.7",
        "cors": "^2.8.5",
        "dotenv": "^16.3.1",
        "express": "^4.18.2",
        "express-rate-limit": "^7.1.5",
        "express-session": "^1.18.2",
        "jsonwebtoken": "^9.0.2",
        "mammoth": "^1.11.0",
        "morgan": "^1.10.0",
        "multer": "^1.4.5-lts.1",
        "nodemailer": "^6.9.7",
        "ollama": "^0.1.0",
        "passport": "^0.7.0",
        "passport-google-oauth20": "^2.0.0",
        "passport-microsoft": "^1.0.0",
        "passport-oauth2": "^1.7.0",
        "pdf-parse": "^1.1.1",
        "pg": "^8.11.3",
        "uuid": "^9.0.1",
        "ws": "^8.13.0"
    },
    "devDependencies": {
        "@types/jest": "^29.5.8",
        "eslint": "^9.36.0",
        "jest": "^29.7.0",
        "nodemon": "^3.0.3",
        "supertest": "^6.3.3"
    },
    "jest": {
        "testEnvironment": "node",
        "setupFilesAfterEnv": [
            "<rootDir>/test/setup.js"
        ],
        "testMatch": [
            "**/test/**/*.test.js"
        ],
        "collectCoverageFrom": [
            "src/**/*.js",
            "!src/**/*.test.js",
            "!src/**/index.js"
        ],
        "coverageReporters": [
            "text",
            "lcov",
            "html"
        ],
        "coverageDirectory": "coverage",
        "testTimeout": 30000,
        "coverageThreshold": {
            "global": {
                "branches": 80,
                "functions": 80,
                "lines": 80,
                "statements": 80
            }
        }
    }
}
