{
    "name": "gov-proposal-ai-backend",
    "version": "1.0.0",
    "description": "Backend for Gov Proposal AI",
    "main": "src/app.js",
    "scripts": {
        "start": "node src/app.js",
        "dev": "nodemon src/app.js",
        "test": "jest",
        "test:watch": "jest --watch",
        "test:coverage": "jest --coverage",
        "test:integration": "jest tests/integration/",
        "migrate": "node scripts/migrate.js",
        "seed": "node scripts/seed.js"
    },
    "dependencies": {
        "express": "^4.18.2",
        "ws": "^8.13.0",
        "pg": "^8.11.3",
        "ollama": "^0.1.0",
        "dotenv": "^16.3.1",
        "cors": "^2.8.5",
        "morgan": "^1.10.0",
        "multer": "^1.4.5-lts.1",
        "pdf-parse": "^1.1.1",
        "mammoth": "^1.6.0",
        "axios": "^1.6.0"
    },
    "devDependencies": {
        "nodemon": "^3.0.3",
        "jest": "^29.7.0",
        "supertest": "^6.3.3",
        "@types/jest": "^29.5.8"
    },
    "jest": {
        "testEnvironment": "node",
        "setupFilesAfterEnv": ["<rootDir>/tests/setup.js"],
        "collectCoverageFrom": [
            "src/**/*.js",
            "!src/app.js",
            "!src/config/**/*.js"
        ],
        "coverageThreshold": {
            "global": {
                "branches": 95,
                "functions": 95,
                "lines": 95,
                "statements": 95
            }
        },
        "testMatch": [
            "**/tests/**/*.test.js",
            "!**/tests/integration/**"
        ]
    }
}