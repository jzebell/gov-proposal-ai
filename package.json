{
    "name": "gov-proposal-ai",
    "version": "1.0.0",
    "private": true,
    "description": "Government Proposal AI Assistant - Monorepo for backend and frontend",
    "workspaces": [
        "packages/backend",
        "packages/frontend"
    ],
    "scripts": {
        "dev": "npm-run-all --parallel dev:*",
        "dev:backend": "npm --workspace packages/backend run dev",
        "dev:frontend": "npm --workspace packages/frontend run dev",
        "docker:up": "docker-compose up -d",
        "docker:down": "docker-compose down",
        "docker:build": "docker-compose build",
        "docker:logs": "docker-compose logs -f",
        "migrate": "npm --workspace packages/backend run migrate",
        "download-models": "npm --workspace packages/backend run download-models",
        "lint": "npm-run-all --parallel lint:*",
        "lint:backend": "npm --workspace packages/backend run lint",
        "lint:frontend": "npm --workspace packages/frontend run lint",
        "test": "npm-run-all --parallel test:*",
        "test:backend": "npm --workspace packages/backend run test",
        "test:frontend": "npm --workspace packages/frontend run test"
    },
    "devDependencies": {
        "npm-run-all": "^4.1.5"
    }
}